{
  "printWidth": 80,
  "useTabs": true,
  "semi": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "quoteProps": "consistent",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.yml", "*.yaml", "*.json", ".eslintrc", ".prettierrc"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
